{
  "name": "auto-dragalia",
  "version": "0.13.0",
  "private": true,
  "main": "src/main.ts",
  "repository": "https://github.com/NateScarlet/auto-dragalia.git",
  "author": "NateScarlet <NateScarlet@Gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "node ./scripts/build.js",
    "watch": "webpack --watch",
    "capture": "autojs cap",
    "code-generate:images": "node ./scripts/generate-images-code.js",
    "adb:push": "node ./scripts/push.js",
    "release": "standard-version"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "8.3.4",
    "@commitlint/config-conventional": "8.3.4",
    "@types/webpack-env": "1.15.0",
    "autojs-dev": "0.7.1",
    "husky": "4.0.10",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "raw-loader": "4.0.0",
    "standard-version": "7.0.1",
    "ts-loader": "6.2.1",
    "tslint": "5.20.1",
    "tslint-microsoft-contrib": "6.2.0",
    "typescript": "3.7.4",
    "webpack": "4.41.5",
    "webpack-cli": "3.3.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{md,ts,js,yml,xml,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "node ./scripts/postchangelog.js"
    }
  }
}
